{% extends 'base.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    <h1 class="text-center my-2">Programme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ program.date ? program.date|date('Y-m-d H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ program.content }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn my-3 mx-4" href="{{ path('admin_P_program_edit', {'id': program.id}) }}">Modifier</a>       
        <div class="my-3">
            {{ include('admin/program/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="text-center">
        <a class="btn my-3 mx-4" href="{{ path('admin_P_program_index') }}">Retour</a>
    </div>

    
{% endblock %}
