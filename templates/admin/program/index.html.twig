{% extends 'base.html.twig' %}

{% block title %}Program index{% endblock %}

{% block body %}
    <h1>Program index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td>{{ program.id }}</td>
                <td>{{ program.date ? program.date|date('d-m-Y') : '' }}</td>
                <td>{{ program.content }}</td>
                <td>
                    <a href="{{ path('admin_P_program_show', {'id': program.id}) }}">show</a>
                    <a href="{{ path('admin_P_program_edit', {'id': program.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_P_program_new') }}">Create new</a>
{% endblock %}
