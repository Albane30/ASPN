{% extends 'base.html.twig' %}

{% block title %}Programme Admin{% endblock %}

{% block body %}
    <h1 class="text-center my-2">Programme</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date</th>
                <th scope="col">Contenu</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for program in programs %}
            <tr>
                <td data-label="Id">{{ program.id }}</td>
                <td data-label="Date">{{ program.date ? program.date|date('d-m-Y') : '' }}</td>
                <td data-label="Contenu">{{ program.content }}</td>
                <td data-label="Actions">
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Voir" href="{{ path('admin_P_program_show', {'id': program.id}) }}"><i class="far fa-eye"></i></a>
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier" href="{{ path('admin_P_program_edit', {'id': program.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('admin/program/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun programme</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="my-4">
        <a class="btn ms-3" href="{{ path('admin_P_program_new') }}">Ajouter un programme</a>
        <a class="btn ms" href="{{ path('admin') }}">Retour</a>
    </div>
{% endblock %}
