{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Équipe</th>
                <th>Avatar</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>
         {% for team in user.team %}  
                {{ team.name }}<br>
                {% endfor %}
                </td>
                <td><div class='adminUserAvatar'><img class='userAvatar' src="{{ vich_uploader_asset(user, 'file') }}" /></td></div>     
                <td>
                    <a href="{{ path('admin_U_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('admin_U_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_U_player_new') }}">Create new player</a>
    <a href="{{ path('admin_U_coach_new') }}">Create new coach</a>
    <a href="{{ path('admin_U_leadership_new') }}">Create new leadership</a>
    <a href="{{ path('admin_U_referee_new') }}">Create new referee</a>


{% endblock %}
