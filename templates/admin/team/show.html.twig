{% extends 'base.html.twig' %}

{% block title %}Équipe{% endblock %}

{% block body %}
    <h1 class="text-center my-2">Équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Équipe</th>
                <td>{{ team.name }}</td>
