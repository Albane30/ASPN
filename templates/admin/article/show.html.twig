{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="text-center my-2">Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
            <tr>
                <th>Cr√©e le : </th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    
    <div class="d-flex">
        <a class="btn my-3 mx-4" href="{{ path('admin_article_edit', {'id': article.id}) }}">Modifier</a>
        <div class="my-3">
        {{ include('admin/article/_delete_form.html.twig') }}
        </div>
    </div>
    <div class="text-center">
        <a class="btn my-3" href="{{ path('admin_article_index') }}">Retour</a>
    </div>
{% endblock %}
