{% extends 'base.html.twig' %}

{% block title %}Articles Admin{% endblock %}

{% block body %}
    <h1 class="text-center">Articles</h1>
    <a class="btn my-5 ms-3" href="{{ path('admin_article_new') }}">Ajouter un article</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Cr√©e le</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.createdAt ? article.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                <td>
                    <a class="mx-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Voir" href="{{ path('admin_article_show', {'id': article.id}) }}"><i class="far fa-eye"></i></a>
                    <a class="mx-2" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier" href="{{ path('admin_article_edit', {'id': article.id}) }}"><i class="fas fa-edit"></i></a>
                    {{ include('admin/article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn ms-3" href="{{ path('admin_article_new') }}">Ajouter un article</a>
    <a class="btn" href="{{ path('admin') }}">Retour</a>
{% endblock %}
