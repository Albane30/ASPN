{% extends 'base.html.twig' %}

{% block title %}Convocation{% endblock %}

{% block body %}
    <h1>Convocation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ convocation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ convocation.date ? convocation.date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ convocation.type }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ convocation.place }}</td>
            </tr>
            <tr>
                <th>Opponent</th>
                <td>{{ convocation.opponent }}</td>
            </tr>
            <tr>
                <th>Meeting</th>
                <td>{{ convocation.meeting }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ convocation.content }}</td>
            </tr>

            {% for user in convocation.user %}
                <td>{{ user.firstname ~ ' ' ~ user.lastname }}</td>
                {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_C_convocation_index') }}">back to list</a>

    <a href="{{ path('admin_C_convocation_edit', {'id': convocation.id}) }}">edit</a>

    {{ include('admin/convocation/_delete_form.html.twig') }}
{% endblock %}
