{% extends 'front/layout.html.twig' %}

{% block title %}ASPN Bureau{% endblock %}

{%block stylesheets %}
{{ parent() }}
{% endblock %}

{% block content %}

<section id="team" class="pb-5">
    <div class="row m-5 justify-content-around">
        <!-- Leadership member -->
        {% for user in users %}
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                <div class="mainflip">
                    <div class="frontside">
                        <div class="card">
                            <div class="card-body text-center">
                                <p><img class="img-thumbnail img-fluid" src="{{ vich_uploader_asset(user, 'file') }}" alt="card image"></p>
                                <h4 class="card-title"> {{ user.firstname }} {{ user.lastname }}</h4>                                
                            </div>
                        </div>
                    </div>
                    <div class="backside">
                        <div class="card">
                            <div class="card-body justify-content-center d-flex align-items-center">
                                <h4 class="card-title mb-0">{{ user.positionHeld }}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>   
</section>
    
{% endblock %}