{% extends 'front/layout.html.twig' %}

{% block title %}ASPN{% endblock %}

{%block stylesheets %}
{{ parent() }}
{% endblock %}


{% block content %}
<div class='content text-center'>
    <div class="row d-flex justify-content-center mx-auto">
        <h1 class='titre my-5'>Bienvenue sur le site de l'ASPN F<i class="fas fa-futbol i-home"></i><i class="fas fa-futbol i-home"></i>t</h1>
                
        {% for article in articles %}
                        <div class="card card-homepage mb-3 article" style="max-width: 640px;">
                            <div class="row g-0">
                                <div class="col-md-4 m-auto">
                                {% if article.picture !=null %}
                                <img src="{{ vich_uploader_asset(article.picture, 'file', 'App\\Entity\\Picture') }}" class="card-img-top" alt="{{ article.title }}" />
                                {% endif %}
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h3 class="card-title">{{ article.title }}</h3>
                                        <p class="card-text">{{ article.content |u.truncate(100, '...', false) }}</p>
                                        <p class="card-text"><small class="text-muted">Crée le {{ article.createdAt ? article.createdAt|date('d-m-Y à H:i:s') : '' }}</small></p>
                                        <a class="btn btn-dark" href='{{path('showInHome', {'id': article.id}) }}'>Lire la suite</a>
                                    </div>
                                </div> 
                            </div>    
                        </div>

        {% endfor %}
    </div>
    <div>
        <a class="btn btn-lg my-3" href="{{path('articles')}}">Voir tous les articles</a>
    </div>
</div>     


{% endblock %}
