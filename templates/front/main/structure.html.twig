{% extends 'front/layout.html.twig' %}

{% block title %}ASPN Structure{% endblock %}

{%block stylesheets %}
{{ parent() }}
{% endblock %}

{% block content %}
<section id="structure" class="m-5">
<h1 class="text-center fw-bold">Notre strucutre</h1>
<div id="structure-carousel" class="carousel slide m-auto shadow mt-5" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#structure-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#structure-carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#structure-carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner rounded">
    <div class="carousel-item active">
      <img src="{{ asset('img/structure/stade-entree.jpeg') }}" class="d-block w-100 img-carousel-structure" alt="stade">
      <div class="carousel-caption d-none d-md-block">
        <h5>Stade René Oblette</h5>  
        <p>Disposant d'un terrain en gazon naturel et d'un terrain en gore</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="{{ asset('img/structure/dalle_foot.jpeg') }}" class="d-block w-100" alt="...">
      <div class="carousel-caption d-none d-md-block">
        <h5>Buvette</h5>    
        <p>Aménagement avec nouvelle dalle</p>
      </div>
    </div>
  </div>
  <a role="button" class="carousel-control-prev" type="button" data-bs-target="#structure-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a role="button" class="carousel-control-next" type="button" data-bs-target="#structure-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>
</section>
{% endblock %}