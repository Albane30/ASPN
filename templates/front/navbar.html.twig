{% set route_name = app.request.attributes.get('_route') %}

<div class='logo'><img class='logoSpinner' src='{{ asset('img/logo.png') }}' alt='logo ASPN'></img></div>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{path('home')}}">ASPN</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ">
        <li class="nav-item">
          <a {% if route_name == "home" %} class="nav-link active" {% else %} class="nav-link" {% endif %} aria-current="page" href="{{path('home')}}">Accueil</a>
        </li>
        
        <li class="nav-item dropdown">
          <a {% if route_name == "program" %} class="nav-link active dropdown-toggle" {% elseif route_name == "result" %} class="nav-link active dropdown-toggle" {% else %} class="nav-link dropdown-toggle" {% endif %} href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Actualités
          </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="{{path('program')}}">Programme</a></li>
            <li><a class="dropdown-item" href="{{path('result')}}">Résultats</a></li>
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a {% if route_name == "referees_index" %} class="nav-link active dropdown-toggle" 
          {% elseif route_name == "leadership_index" %} class="nav-link active dropdown-toggle"
          {% elseif route_name == "coach_index" %} class="nav-link active dropdown-toggle"
          {% elseif route_name == "structure" %} class="nav-link active dropdown-toggle"
          {% else %} class="nav-link dropdown-toggle" {% endif %} href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Le club
          </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="{{path('leadership_index')}}">Bureau</a></li>
            <li><a class="dropdown-item" href="{{path('coach_index')}}">Staff</a></li>
            <li><a class="dropdown-item" href="{{path('referees_index')}}">Nos arbitres</a></li>
            <li><a class="dropdown-item" href="{{path('structure')}}">Notre structure</a></li>
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a {% if route_name == "front_T_team_show" %} class="nav-link active dropdown-toggle" {% else %} class="nav-link dropdown-toggle" {% endif %} href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Équipes
          </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            {% for team in teamService.teams %}
            <li><a class="dropdown-item" href="{{ path('front_T_team_show', { 'id': team.id }) }}">{{ team.name }}</a></li>
            {% endfor %}
          </ul>
        </li>

        <li class="nav-item dropdown">
          <a {% if route_name == "front_T_convoc_show" %} class="nav-link active dropdown-toggle" {% else %} class="nav-link dropdown-toggle" {% endif %} href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Convocations
          </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            {% for team in teamService.teams %}
            <li><a class="dropdown-item" href="{{ path('front_T_convoc_show', { 'id': team.id }) }}">{{ team.name }}</a></li>
            {% endfor %}
          </ul>
        </li>

         <li class="nav-item">
          <a class="nav-link" aria-current="page" href="{{ path('contact') }}">Contact</a>
        </li>

        <li class="nav-item">
          <a {% if route_name == "app_register" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{ path('app_register') }}">Inscription</a>
        </li>
       
       {% if is_granted('ROLE_USER') %}
        <li class="nav-item">
          <a {% if route_name == "app_logout" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{ path('app_logout') }}">Déconnexion</a></li>
          {% if is_granted('ROLE_ADMIN') %}
          <a {% if route_name == "admin" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{ path('admin') }}">Admin</a></li>
          {% endif %}
        {% else %}
        <li class="nav-item">
          <a {% if route_name == "app_login" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{ path('app_login') }}">Connexion</a>
        </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>